{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "jsRules": {},
  "rules": {
    // 必须使用单引号，jsx 中必须使用双引号
    "quotemark": [false],
    // 行尾必须有分号
    "semicolon": [false],
    // 接口名称必须以 I 开头
    "interface-name": [true, "never-prefix"],
    // 对象字面量必须按 key 排序
    "object-literal-sort-keys": [false],
    // 一个文件最多定义一个 class，保证单一职责
    "max-classes-per-file": false, // [true, 2]
    // 禁止出现空代码块，允许 catch 是空代码块
    "no-empty": [false],
    // 限制变量命名规则
    "variable-name": [false],
    // 禁止定义空的接口
    "no-empty-interface": [false],
    // 禁止使用 console
    "no-console": false,
    // 优先使用接口而不是字面类型
    // "interface-over-type-literal": [false],
    // if 后的 { 禁止换行
    "one-line": [false],
    // 禁止变量名与上层作用域内的定义过的变量重复
    "no-shadowed-variable": [false],
    // for in 内部必须有 hasOwnProperty
    "forin": [false],
    // 禁用特定的类型
    "ban-types": [false],
    // 禁止使用 namespace 来定义命名空间
    "no-namespace": [false],
    // 禁止使用三斜线引入模块 /// <reference path="foo" />
    "no-reference": [false]
  },
  "rulesDirectory": []
}
